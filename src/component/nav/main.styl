baseColor = #32384C
deepColor = #202636

.nav
  height 48px
  display flex
  justify-content space-between
  align-items center
  box-shadow 0px -1px 11px 0px #001529
  z-index 2
  padding 0 12px
  padding-left 0
  background #001529
  border-bottom 1px solid deepColor
  .left
    .left-box
      padding-left 24px
      width 201px
      img
        height 36px
  .content
    width 100%
    height 100%
    ul
      display flex
      height 100%
      li
        width 96px
        height 100%
        line-height 48px
        text-align center
        cursor pointer
        &:hover
          color #FFDEBF
  .right
    display flex
    .other
      color #fff
      font-size 14px
      cursor pointer
      height 100%
      line-height 48px
      >div
        &:hover
          color #FFDEBF
    .nickName
      margin 0 8px
  .active
    background linear-gradient(121deg, #FFEFD5 0%, #FED8AE 100%)
    color #32384C
    &:hover
      color #32384C!important